{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "#signals": [
        "src/index.cjs",
        "src/index.mjs"
      ],
      "#signals/signals": [
        "src/signals/index.mjs"
      ],
      "#signals/signals/*": [
        "src/signals/*.mjs"
      ]
    }
  },
  "include": [
    "."
  ],
  "exclude": [
    "test/**/*"
  ]
}
