{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "#signals": [
        "src/index.mjs"
      ],
      "#signals/signals": [
        "src/signals/index.mjs"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
